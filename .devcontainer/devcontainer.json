{
  "name": "Edgeless DEV",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--name",
    "edgeless_devcontainer"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "zxh404.vscode-proto3"
      ],
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    },
    "forwardPorts": [
      7001,
      7011,
      7021,
      7035
    ],
    "mounts": [
      "type=volume,target=${containerWorkspaceFolder}/target",
      "source=edgeless-zshhistory,target=/commandhistory,type=volume"
    ],
    "remoteUser": "edgeless",
    "postStartCommand": "sudo chown -R edgeless:edgeless ${containerWorkspaceFolder}/target"
  }
}