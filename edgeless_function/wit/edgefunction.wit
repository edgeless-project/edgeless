package edgeless:edgefunction

world edgefunction {
  
  record fid {
    node: string,
    function: string
  }

  variant call-ret {
    reply(string),
    noreply,
    err
  }

  import cast-alias: func(alias: string, msg: string)
  import cast: func(target: fid, msg: string)
  import call: func(target: fid, msg: string) -> call-ret
  import call-alias: func(alias: string, msg: string) -> call-ret
  import telemetry-log: func(lvl: string, target: string, message: string)
  import slf: func() -> fid
  import delayed-cast: func(delayms: u64, target: fid, payload: string)
  import sync: func(state: string)

  export handle-cast: func(source: fid, msg: string)
  export handle-call: func(source: fid, msg: string) -> call-ret
  export handle-init: func(payload: string, state: option<string>)
  export handle-stop: func()
}