{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start_dda",
            "command": "./scripts/start_dda.sh",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "custom",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "start_mqtt_broker",
            "command": "brew services start mosquitto",
            "type": "shell"
        },
        {
            "label": "build dda library",
            "command": "cargo build --package dda"
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}